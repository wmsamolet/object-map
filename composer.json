{
    "name": "wmsamolet/object-map",
    "type": "library",
    "description": "PHP library for mapping, linking, configuring objects using data repository",
    "keywords": [
        "php",
        "object",
        "objects",
        "map",
        "mapping",
        "linking",
        "config",
        "configuring",
        "handlers"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaly Samolet",
            "email": "wmsamolet@gmail.com"
        }
    ],
    "require": {
        "ext-json": "*",
        "php": ">=7.2.0",
        "wmsamolet/php-object-collections": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "squizlabs/php_codesniffer": "^2.0 || ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Wmsamolet\\ObjectMap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wmsamolet\\ObjectMap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit -v --testdox",
        "check": "vendor/bin/phpcs && vendor/bin/phpunit -v --testdox",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf"
    },
    "scripts-descriptions": {
        "test": "Runs all tests",
        "check": "Validate coding standards and run all tests",
        "phpcs": "Run validation coding standarts",
        "phpcbf": "Run fix coding standarts"
    }
}
